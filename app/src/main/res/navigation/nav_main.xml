<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/moviesListFragment">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.insiderser.popularmovies.ui.list.MoviesListFragment"
        tools:layout="@layout/fragment_movies_list" />
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.insiderser.popularmovies.ui.details.MovieDetailsFragment"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/to_reviewsFragment"
            app:destination="@id/reviewsFragment" />
    </fragment>
    <action
        android:id="@+id/to_movieDetailsFragment"
        app:destination="@id/movieDetailsFragment" />
    <fragment
        android:id="@+id/reviewsFragment"
        android:name="com.insiderser.popularmovies.ui.reviews.ReviewsFragment"
        tools:layout="@layout/fragment_reviews">
        <argument
            android:name="movieId"
            app:argType="integer" />
        <action
            android:id="@+id/to_addReviewFragment"
            app:destination="@id/addReviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/addReviewFragment"
        android:name="com.insiderser.popularmovies.ui.reviews.add.AddReviewFragment"
        tools:layout="@layout/fragment_add_review">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>
